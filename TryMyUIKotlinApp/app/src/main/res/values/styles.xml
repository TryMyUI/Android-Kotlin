<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/try_my_ui_green</item>
        <item name="colorPrimaryDark">@color/trymyui_color_blackshade</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="tab_text">
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="instruction_page_textview">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/for_16sp</item>
        <item name="android:textColor">@color/dim_gray</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingExtra">@dimen/_5dp</item>
    </style>

    <style name="instruction_page_textview_heading">
        <item name="android:textColor">@color/dark_slate_gray</item>
        <item name="android:lineSpacingExtra">@dimen/_5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="instruction_page_button">
        <item name="android:background">@color/background_orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:paddingLeft">@dimen/_30dp</item>
        <item name="android:paddingRight">@dimen/_30dp</item>
        <item name="android:paddingTop">@dimen/_10dp</item>
        <item name="android:paddingBottom">@dimen/_10dp</item>
        <item name="android:layout_width">@dimen/_220dp</item>
        <item name="android:layout_height">@dimen/_60dp</item>

    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="dimen_step_indicator">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="step_indicator_active" parent="@style/dimen_step_indicator">
        <item name="android:background">@drawable/black_circle_img</item>
    </style>

    <style name="step_indicator" parent="@style/dimen_step_indicator">
        <item name="android:background">@drawable/black_circle_faded_img</item>
    </style>

    <style name="AppTheme.MaterialDialogTheme" parent="android:Theme.Material.Light.Dialog"></style>

</resources>
