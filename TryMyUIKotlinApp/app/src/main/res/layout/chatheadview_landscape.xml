<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/chathead_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/green_circle_img"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ui_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ui_bubble" />

        <TextView
            android:id="@+id/timer_native_app"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="--:--"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chathead_img_paused"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/red_circle_img"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ui_img_paused"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ui_bubble" />

        <TextView
            android:id="@+id/timer_native_app_paused"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PAUSED"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_very_small"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tap_here"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">


        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/taphere_img" /><!--taphere_img-->


    </LinearLayout>

    <com.mahesch.trymyui.helpers.AutoFitTextureView
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_90dp"
        android:id="@+id/face_recording_texture_view"/>

</LinearLayout>
