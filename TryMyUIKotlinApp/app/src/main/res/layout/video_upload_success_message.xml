<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:paddingBottom="@dimen/_10dp"
        android:paddingTop="@dimen/_10dp"
        android:text="SUCCESS!"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold"
        android:id="@+id/tv_lbl_success" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center|center_vertical"
        android:paddingBottom="@dimen/_5dp"
        android:paddingTop="@dimen/_5dp"
        android:text="@string/video_upload_successfully"
        android:textColor="@color/try_my_ui_green"
        android:textSize="@dimen/_16sp"
        android:textStyle="normal"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_below="@+id/tv_lbl_success"
        android:id="@+id/tv_lbl_uploading_success"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center|center_vertical|center_horizontal"
        android:paddingBottom="@dimen/_10dp"
        android:paddingTop="@dimen/_10dp"
        android:layout_below="@+id/tv_lbl_uploading_success"
        android:id="@+id/ll_gif_success_checkmark">

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_60dp"
            android:background="@drawable/success_checkmark" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_weight="1"
        android:clickable="true"
        android:paddingBottom="@dimen/_10dp"
        android:paddingTop="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_below="@+id/ll_gif_success_checkmark">

        <TextView
            android:id="@+id/textview_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_background_green"
            android:gravity="center"
            android:paddingLeft="@dimen/_15dp"
            android:paddingTop="@dimen/_10dp"
            android:paddingRight="@dimen/_15dp"
            android:paddingBottom="@dimen/_10dp"
            android:text="CONTINUE"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>