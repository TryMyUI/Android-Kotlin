<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <ImageView
        android:layout_width="@dimen/_70px"
        android:layout_height="@dimen/_70px"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginTop="@dimen/_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/app_icon"
        android:id="@+id/iv_appicon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_39px"
        android:id="@+id/tv_lbl_welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_appicon"
        android:text="@string/welcome_to"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginTop="@dimen/_15dp"
        android:textSize="@dimen/_32sp"
        android:textColor="@color/_444444"
        android:textFontWeight="500"
        android:fontFamily="@font/helvitica_neue"
        android:textStyle="normal"
        android:letterSpacing="0.04"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lbl_welcome"
        android:text="@string/app_name"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginTop="@dimen/_7dp"
        android:textSize="@dimen/_36sp"
        android:textColor="@color/_88C149"
        android:id="@+id/tv_lbl_appname"
        android:textFontWeight="500"
        android:fontFamily="@font/helvitica_neue"
        android:textStyle="normal"
        android:letterSpacing="0.04"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lbl_appname"
        android:text="@string/pleaseentertestcodebasicinfo"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginTop="@dimen/_10dp"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/_7F8690"
        android:textFontWeight="500"
        android:fontFamily="@font/helvitica_neue"
        android:textStyle="normal"
        android:letterSpacing="0.04"
        android:id="@+id/tv_lbl_entertestcode"/>



    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:hint="@string/fullname"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginRight="@dimen/_25dp"
        android:inputType="textPersonName"
        android:lines="1"
        android:textCursorDrawable="@null"
        android:cursorVisible="true"
        android:paddingLeft="@dimen/pd_10"
        android:textColor="@color/dark_slate_gray"
        android:textColorHint="@color/_C1C5C7"
        android:textSize="@dimen/_14sp"
        android:textFontWeight="500"
        android:fontFamily="@font/helvitica_neue"
        android:textStyle="normal"
        android:letterSpacing="0.04"
        android:background="@drawable/test_uniqie_code_btn_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_lbl_entertestcode"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginRight="@dimen/_25dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:textCursorDrawable="@null"
        android:cursorVisible="true"
        android:paddingLeft="@dimen/pd_10"
        android:textColor="@color/dark_slate_gray"
        android:textColorHint="@color/_C1C5C7"
        android:textSize="@dimen/_14sp"
        android:textFontWeight="500"
        android:fontFamily="@font/helvitica_neue"
        android:textStyle="normal"
        android:letterSpacing="0.04"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/test_uniqie_code_btn_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_username"
        />

    <EditText
        android:id="@+id/et_test_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginRight="@dimen/_25dp"
        android:layout_marginBottom="@dimen/_30dp"
        android:textColor="@color/dark_slate_gray"
        android:textColorHint="@color/_C1C5C7"
        android:textSize="@dimen/_14sp"
        android:textFontWeight="500"
        android:fontFamily="@font/helvitica_neue"
        android:textStyle="normal"
        android:letterSpacing="0.04"
        android:background="@drawable/test_uniqie_code_btn_bg"
        android:hint="@string/testcode"
        android:inputType="text"
        android:paddingLeft="@dimen/pd_10"
        android:textCursorDrawable="@null"
        android:cursorVisible="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_email"
        android:layout_marginTop="@dimen/_20dp"/>


    <Button
        android:id="@+id/btn_guest_signin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginLeft="@dimen/_25dp"
        android:layout_marginRight="@dimen/_25dp"
        android:layout_marginBottom="@dimen/_30dp"
        android:layout_marginTop="@dimen/_30dp"
        android:background="@drawable/trymyuitester_btn_bg"
        android:text="@string/continu"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:fontFamily="@font/helvitica_neue"
        android:textStyle="normal"
        android:letterSpacing="0.04"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_done">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/_7F8690"
                android:text="@string/areyouatrymyuitester"
                android:textFontWeight="500"
                android:fontFamily="@font/helvitica_neue"
                android:textStyle="normal"
                android:letterSpacing="0.04" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_008CBA"
                android:text="@string/login"
                android:textFontWeight="500"
                android:fontFamily="@font/helvitica_neue"
                android:textStyle="normal"
                android:letterSpacing="0.04"
                android:layout_marginLeft="@dimen/_10dp"
                android:textSize="@dimen/_16sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

