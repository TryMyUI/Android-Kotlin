<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert"
        android:id="@+id/tv_lbl_alert_title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="@dimen/_20sp"
        android:textColor="@color/dark_slate_gray"
        android:fontFamily="sans-serif-medium"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_alert_message"
        android:layout_below="@+id/tv_lbl_alert_title"
        android:lineSpacingExtra="5dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textSize="@dimen/_20sp"
        android:textColor="@color/dark_slate_gray"
        android:fontFamily="sans-serif-light"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40dp"
        android:id="@+id/btn_ok_alert"
        android:layout_below="@+id/tv_alert_message"
        android:text="@string/ok_alert"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@color/orange"/>

</RelativeLayout>