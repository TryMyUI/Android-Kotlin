<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mahesch.trymyui.activity.FaceRecordingInfoActivity"
    android:background="@color/orange">

    <LinearLayout
        android:id="@+id/linearlayout_faceRecordingPermission"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="75"
            android:paddingTop="@dimen/_40dp"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp">

            <TextView
                android:id="@+id/tv_facerecording_permission_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/_5dp"
                android:text="Face Recording"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/text_grey"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_16sp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:text="@string/face_recording_permission_text"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                android:lineSpacingExtra="@dimen/_5dp"
                android:layout_marginTop="@dimen/_20dp"/>


        </LinearLayout>


        <TextView
            android:id="@+id/tv_facerecording_permission_question"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textSize="@dimen/_16sp"
            android:text="@string/face_recording_permission_question"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_weight="15"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/background_orange"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/btn_face_recording_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_weight="1"
                android:background="@color/green_light"
                android:padding="@dimen/_10dp"
                android:text="@string/no"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_14sp"/>

            <Button
                android:id="@+id/btn_face_recording_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1"
                android:background="@color/green_light"
                android:padding="@dimen/_10dp"
                android:text="@string/yes"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_14sp"/>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
