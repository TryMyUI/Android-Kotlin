<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert"
        android:id="@+id/tv_lbl_alert_title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/dark_slate_gray"
        android:fontFamily="sans-serif-medium"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_alert_message"
        android:layout_below="@+id/tv_lbl_alert_title"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginBottom="@dimen/_15dp"
        android:gravity="center"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/dark_slate_gray"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_alert_message"
        android:layout_marginRight="@dimen/_50dp"
        android:layout_marginLeft="@dimen/_50dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40dp"
            android:id="@+id/btn_yes"
            android:text="@string/yes"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:layout_alignParentRight="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40dp"
            android:id="@+id/btn_no"
            android:text="@string/no"
            android:textColor="@color/white"
            android:background="@color/dark_gray"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>



</RelativeLayout>