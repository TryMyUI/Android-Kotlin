<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hr_gl_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.825" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hr_gl_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vr_gl_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vr_gl_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <Button
        android:id="@+id/btn_get_started"
        style="@style/instruction_page_button"
        android:text="@string/get_started"
        app:layout_constraintBottom_toBottomOf="@+id/hr_gl_btn_2"
        app:layout_constraintEnd_toEndOf="@+id/vr_gl_btn_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/vr_gl_btn_1"
        app:layout_constraintTop_toTopOf="@+id/hr_gl_btn_1"
        app:layout_constraintVertical_bias="0.9" />

    <!-- <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="sw320" />-->


    <ImageView
        android:id="@+id/iv_ui_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_10dp"
        android:layout_marginTop="@dimen/_60dp"
        android:src="@drawable/app_icon"
        app:layout_constraintBottom_toTopOf="@+id/tv_get_know_testing_lbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />


    <TextView
        android:id="@+id/tv_get_know_testing_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/get_know_testing"
        android:textColor="@color/dark_slate_gray"
        android:textSize="@dimen/_40sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_lbl_mobiletesting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_lbl_mobiletesting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="@dimen/_30dp"
        android:fontFamily="sans-serif"
        android:gravity="center|top"
        android:text="@string/mobile_testing"
        android:textColor="@color/dark_slate_gray"
        android:textSize="@dimen/_40sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_voice_gesture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/iv_voice_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_voice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_screen_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_voice_gesture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_gestures"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_voice_gesture"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        style="@style/instruction_page_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:text="@string/assistance_screen1"
        android:textSize="@dimen/_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_voice_gesture" />



</androidx.constraintlayout.widget.ConstraintLayout>