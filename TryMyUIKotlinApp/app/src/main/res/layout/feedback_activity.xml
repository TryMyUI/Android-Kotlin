<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/_12dp"
            android:layout_height="@dimen/_18dp"
            android:src="@drawable/back_arrow_vector"
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginTop="@dimen/_62dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:text="@string/sendFeedback"
            android:textStyle="normal"
            android:fontFamily="@font/helvitica_neue"
            android:textFontWeight="500"
            android:letterSpacing="0.04"
            android:textSize="@dimen/_24sp"
            android:textColor="@color/dark_slate_gray"
            android:layout_marginTop="@dimen/_56dp"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textStyle="normal"
                android:text="@string/sendFeedbackdesc"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginTop="@dimen/_70dp"
                app:layout_constraintTop_toBottomOf="@+id/vw"
                android:lineSpacingExtra="@dimen/_7dp"
                android:textSize="@dimen/_16sp"
                android:textColor="#7F8690"
                android:id="@+id/tv_forgetpassworddesc"
                android:fontFamily="@font/helvetica_neue_1"
                android:textFontWeight="500"
                android:letterSpacing="0.04"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250dp"
                android:layout_marginTop="@dimen/_50dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_forgetpassworddesc"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_25dp"
                android:background="@drawable/white_fill_round_corner"
                android:hint="@string/typeyourfeedbackhere"
                android:gravity="top"
                android:paddingLeft="@dimen/_15dp"
                android:paddingTop="@dimen/_10dp"
                android:textColor="@color/_7F8690"
                android:textStyle="normal"
                android:fontFamily="@font/helvetica_neue_1"
                android:textFontWeight="500"
                android:letterSpacing="0.04"
                android:textSize="@dimen/_16sp"
                android:id="@+id/editTextFeedback"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55dp"
                android:background="@drawable/trymyuitester_btn_bg"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginBottom="@dimen/_30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/_16sp"
                android:text="@string/sendFeedback"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/editTextFeedback"
                android:layout_marginTop="@dimen/_35dp"
                android:textAllCaps="false"
                android:id="@+id/buttonOk"
                android:textStyle="normal"
                android:fontFamily="@font/helvetica_neue_1"
                android:textFontWeight="500"
                android:letterSpacing="0.04"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200dp"
                android:background="@color/white"
                android:layout_margin="@dimen/_30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/rl_feedback_sent"
                android:visibility="gone">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvitica_neue"
                    android:textFontWeight="500"
                    android:letterSpacing="0.04"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_50dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginRight="@dimen/_30dp"
                    android:textColor="@color/_444444"
                    android:textSize="@dimen/_16sp"
                    android:text="@string/feedbacksentmessage"/>



            </RelativeLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>


