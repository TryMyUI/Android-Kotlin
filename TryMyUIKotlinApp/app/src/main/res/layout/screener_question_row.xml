<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_4dp"
    app:cardElevation="@dimen/_3dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_50dp"
    android:layout_marginLeft="@dimen/_20dp"
    android:layout_marginRight="@dimen/_20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:id="@+id/rl_collapsedquestion"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20dp"
            android:id="@+id/tv_question_collapsed"
            android:visibility="visible"
            android:text="Question 0."
            android:textColor="@color/dark_slate_gray"
            android:letterSpacing="0.04"
            android:textFontWeight="500"
            android:textStyle="normal"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/_16sp"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_question_status"
            android:src="@drawable/ic_vector_lock"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_question_options"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_below="@+id/rl_collapsedquestion"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_question"
            android:text="Question "
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10dp"
            android:textSize="@dimen/_16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_dyanamic_screener_options"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_confirm"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textSize="@dimen/_16sp"
            android:textColor="#AAAAAA"
            android:letterSpacing="0.04"
            android:textFontWeight="500"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_10dp"/>

    </LinearLayout>


</RelativeLayout>

</androidx.cardview.widget.CardView>